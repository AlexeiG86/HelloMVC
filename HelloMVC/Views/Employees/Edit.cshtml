@model Employee


<form method="post">

    <input type="hidden" value="@Model.EmployeeId" name="EmployeeID" />
    <div class="mb-3">
        <label class="form-label" id="lblFirstName"> First Name </label>
        <input class="form-control" type="text" value="@Model.FirstName" for="lblFirstName" name="FirstName" />
    </div>
    <div class="mb-3">
    </div>

    <div class="mb-3">
        <label class="form-label" id="lblLastName"> Last Name </label>
        <input class="form-control" type="text" value="@Model.LastName" for="lblLastName" name="LastName" />
    </div>

    <div class="mb-3">
        <button class="btn btn-primary" type="submit"> Save Employee</button>
    </div>

</form>
