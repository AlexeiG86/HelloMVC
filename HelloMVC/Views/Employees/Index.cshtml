@model List<Employee>

<h1>Employee List</h1>
<div class="row mb-3 pb-2 border-bottom">
    <div class="col">
        <a href="/Employees/Create" class="btn btn-success">Add New</a>
    </div>

</div>
<div class="row">

    @foreach (var employee in Model)
    {
        <div class="col-6">
            <div class="card mb-2">
                <div class="card-body">
                    <h5 class="card-title">@employee.FirstName @employee.LastName</h5>
                    @foreach (var vacation in employee.VacationRequests)
                    {
                        <ul class=" list-group">
                            <li class="list-group-item mb-2">
                                <div>
                                    @vacation.StartDate.ToString("dd MMMM, yyyy") - @vacation.EndDate.ToString("dd MMMM, yyyy")
                                    <span class="text-success"> <strong>@((vacation.EndDate - vacation.StartDate).Days + 1) days</strong></span>
                                </div>
                                <div>
                                    @vacation.Comment
                                </div>

                            </li>
                        </ul>
                    }
                    <div class="text-end mt-3">

                        @*<a href="/Employees/Edit/@employee.EmployeeId" class="btn btn-primary">Edit</a>*@
                        <a asp-controller="Employees" asp-action="Edit" asp-route-id="@employee.EmployeeId" class="btn btn-primary">Edit</a>
                        <a asp-controller="Employees" asp-action="ManageVacation" asp-route-EmployeeId="@employee.EmployeeId" class="btn btn-primary">Manage Vacation Data</a>
                    </div>
                </div>
            </div>
        </div>

    }
</div>


  

    

